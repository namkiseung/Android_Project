<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d66dc"
    android:orientation="vertical"
    tools:context="com.namkit.namki.novafolio.FindMember">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="[아이디 찾기]"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--이름 입력       -->
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="이름 : "
            android:textColor="#ffffff"  />
        <EditText
            android:id="@+id/etFindName"
            android:singleLine="true"
            android:layout_marginLeft="5dp"

            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_Find_ID"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="아이디 찾기"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="60dp"
        android:textSize="18sp"
        android:text="[확인 ID] : "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FindIdDisplay"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="회원ID"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FindEmailDisplay"
        android:layout_marginLeft="140dp"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:text="이메일"/>

<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#000000"
    android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="[비밀번호 찾기]"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--이름 입력       -->
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="아이디 : "
            android:textColor="#ffffff"  />
        <EditText
            android:id="@+id/etFindId_id"
            android:singleLine="true"
            android:layout_marginLeft="5dp"

            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_Find_PW"
            android:layout_marginLeft="5dp"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="비밀번호 찾기"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--이름 입력       -->
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="이메일 : "
            android:textColor="#ffffff"  />
        <EditText
            android:id="@+id/etFindEmail_Email"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="60dp"
            android:textSize="18sp"
            android:text="[확인 PW] : "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FindPwDisplay"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="회원PW"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_MoveToLogin"
            android:foreground="?attr/selectableItemBackground"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="로그인 하러가기"/>
    </RelativeLayout>
</LinearLayout>
