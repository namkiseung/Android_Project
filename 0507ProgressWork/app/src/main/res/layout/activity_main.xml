<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.namkit.namki.a0507progresswork.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 프로필"/>
    <Button
        android:id="@+id/state_color"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#000000"
        android:rotation="50"
        />
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:background="#000000"
        android:rotation="50"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/state_color"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:text="User"/>
    <TextView
        android:id="@+id/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:text="state Condition"/>
    </LinearLayout>
    <TextView
        android:id="@+id/dtime"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30초"/>
    <TextView
        android:id="@+id/friendtext"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/state_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 목록"/>

    <ListView
        android:id="@+id/listView"
        android:layout_below="@+id/friendtext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="추가"
        android:id="@+id/btn_add"></Button>
</RelativeLayout>
