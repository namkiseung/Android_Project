<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/srcoll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="com.namkit.namki.novafolio.MainMonitoring.CustomDialog">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="[상태 선택]"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:background="#888888"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_red"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="#cc0c0c"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="(바쁜 상태)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:background="#888888"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_yellow"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="#fffb06"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="(보통 상태)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:background="#888888"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_green"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="#00b10c"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="(한가한 상태)"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:background="#888888"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_black"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="5"
                android:layout_marginBottom="5dp"
                android:background="#000000"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textColor="#555566"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="(부재중)"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:text="(상태를 변경하시려면 위의 색상을 눌러주세요)"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:text="[설정시간] : "/>
            <EditText
                android:id="@+id/edit_dialog_time"
                android:layout_width="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="0dp"
                android:text="0"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginRight="0dp"
                android:text="분"/>
            <EditText
                android:id="@+id/edit_dialog_timesec"
                android:layout_width="60dp"
                android:layout_marginTop="15dp"
                android:text="0"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="초"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:text="[상태 메시지 입력]"/>
        <!-- <EditText
             android:id="@+id/edit_userid"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="아이디"/>-->
        <EditText
            android:id="@+id/edit_userdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="상태를 입력하세요"/>

    </LinearLayout>    </ScrollView>