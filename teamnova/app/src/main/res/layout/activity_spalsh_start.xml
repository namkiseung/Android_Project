<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sp_Layout"
    android:background="@drawable/animation_background"
    tools:context="com.namkit.namki.teamnova.SpalshStart">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/sp_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="80dp"
        app:srcCompat="@drawable/dynimic_logo"
        android:src="@drawable/nova"/>
    <TextView
        android:id="@+id/sp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="-100dp"
        android:text="코딩교육의 끝판왕"/>
</LinearLayout>
</RelativeLayout>