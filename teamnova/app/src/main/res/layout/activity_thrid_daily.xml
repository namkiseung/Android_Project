<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.namkit.namki.teamnova.Menu3_Daily.Thrid_daily">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="25sp"
      android:text="글 내용 확인 하기"
      android:background="@color/light_blue_500"
      android:gravity="center"/>
    <TextView
        android:id="@+id/daily_cate_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="카테고리"
        android:inputType="text"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="#000000"
        android:singleLine="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#4d66dc" />
    <TextView
        android:id="@+id/daily_title_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="제목"
        android:inputType="text"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="#000000"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#4d66dc" />

    <TextView
        android:id="@+id/daily_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="내용"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_viewlist"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_save"
                android:background="#999999"
                android:text="목록보기"
                android:textSize="25sp" />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
